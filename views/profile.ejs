          <!-- new add post form -->
          <section class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
            <div class="card-body">
              <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                <h2>Add a pose-st ðŸ’ª</h2>
                <div class="form-control">
                  <label for="title" class="label">
                    <span class="label-text">Title</span>
                  </label>
                  <input type="text" placeholder="Best title ever" class="input input-bordered" id="title" name="title" />
                </div>
                <div class="form-control">
                  <label for="caption" class="label">
                    <span class="label-text">Caption</span>
                  </label>
                  <textarea type="text" placeholder="Today I.." class="input input-bordered" id="caption" name="caption"></textarea>
                </div>
                <div class="form-control">
                  <label for="imageUpload" class="label">
                    <span class="label-text">Image</span>
                  </label>
                  <input type="file" class="form-control" id="imageUpload" name="file">
                </div>
                <!-- sumbit post button -->
                <div class="form-control mt-6">
                  <button class="btn btn-primary" type="sumbit">Create Post</button>
                </div>
              </form>
            </div>
          </section>
          <!-- end new post form -->

          <!-- ************************** -->
          <!-- new update user details -->
          <section class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
            <div class="card-body">
              <form action="/post/updateCurrentWeight?_method=PUT"  method="POST">
                <h2>Update your accomplishments ðŸ’ª</h2>
                <div class="form-control">
                  <label for="title" class="label">
                    <span class="label-text">Update Current Weight</span>
                  </label>
                  <input type="number" placeholder="Input your current weight" value = <%= user.currentWeight %> class="input input-bordered" id="currentWeight" value = <%= user.currentWeight %> name="currentWeight" />
                </div>
                <!-- sumbit button -->
                <div class="form-control mt-6">
                  <button class="btn btn-primary" type="sumbit" value="updateCurrentWeight">Update Current Weight</button>
                </div>
              </form>
            </div>
          </section>
          <!-- end new update user details -->
      </div>

      <!-- User posts(images) -->
      <div class="artboard phone-3 w-1/2 overflow-y-auto" >
        <section class="">
          <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="col-6 justify-content-between mb-5">
              <a href="/post/<%= posts[i]._id%>">
                <img class="img-fluid" src="<%= posts[i].image%>">
              </a>
            </li>
          <% } %>
          </ul>
